<html>
    <%- include('./partials/head') %>
<body class="modificarPerfil">
    <%- include('./partials/header') %>
<div class="card-body">
    <h5 class="card-title text-center">PERFIL DE USUARIO</h5>
    <form action="/users/update/<%= user.id %>?_method=PUT" class="row" method="POST"
        novalidate enctype="multipart/form-data">
        <div class="col-12 col-md-6 mb-3">
            <label for="exampleInputName" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="exampleInputName"
                aria-describedby="emailHelp" name="name" value="<%= user.name %>">
            <span class="text-danger small">
                <%= locals.errores && locals.errores.name ? errores.name.msg : null %>
            </span>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" name="email" readonly
                value="<%= user.email %>">
           
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label for="exampleInputPassword1" class="form-label">Cambiar
                contraseña</label>
            <input type="password" class="form-control" id="exampleInputPassword1"
                name="password">
            <span class="text-danger small">
                <%= locals.errores && locals.errores.password ? errores.password.msg :
                    null %>
            </span>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label for="exampleInputPassword2" class="form-label">Reingresá tu
                contraseña</label>
            <input type="password" class="form-control" id="exampleInputPassword2"
                name="password2">
        </div>
        <div class="col-12 col-md-6 text-center">
            <label for="avatar" class="btn btn-primary my-3">Subir imagen</label>
            <input type="file" name="avatar" id="avatar" hidden>

        </div>
        <div class="col-12 col-md-6 text-end">
            <button type="submit" class="btn btn-success my-3">Guardar</button>
            <a href="/users/perfil" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
</body>

</html>
